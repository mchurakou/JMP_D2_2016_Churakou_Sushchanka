<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="debug" strict="true" name="XMLConfigTest" packages="org.apache.logging.log4j.test">
    <Properties>
        <Property name="debug">target/debug.log</Property>
    </Properties>

    <Appenders>
        <File name="DebugFile" fileName="${debug}" append="false">
            <Layout type="PatternLayout">
                <Pattern>%d %p %C{1.} [%t] %m%n</Pattern>
            </Layout>
        </File>
    </Appenders>

    <Loggers>
        <Root level="debug">
            <!--<AppenderRef ref="appenderConsole" />-->
            <AppenderRef ref="DebugFile"/>
        </Root>
    </Loggers>
</Configuration>